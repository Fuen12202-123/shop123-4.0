<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title 衣貳衫</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
          integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <link href="~/Content/ToTop.css" rel="stylesheet" />
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
</head>
<body id="body-content">
    <div class="container">
        <div class="row mt-4">
            <div class="col-12 col-sm-8">@Html.ActionLink(" ", "Index", "Home", null, new { style = "background: url('" + Url.Content("~/Images/logo.png") + "') no-repeat center right; display:block; height:122px; width:238px;" })</div>
            <div class="col-12 col-sm-4 d-flex justify-content-end align-items-end mb-5">
                @using (Html.BeginForm("Allspu", "Home", FormMethod.Get))
                {
                    @Html.TextBox("SearchString", "", new { id = "Search", required = "required", placeholder = "Search", @style = "outline:0;" })
                    <button style="border:0;background-color:transparent;outline:0" type="submit"><i class="fas fa-search"></i></button>
                }
            </div>
        </div>

        <div>
            <ul class="row list-unstyled justify-content-end mb-5 ">
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a class="text-dark px-4 text-decoration-none" ; href="@Url.Action("MemberCenter", "Member")">@(User.Identity.IsAuthenticated ? HttpContext.Current.User.Identity.Name : "Guest")</a></li>
                    <li><a class="text-dark px-4 text-decoration-none" ; href="@Url.Action("Logout", "Home")">登出</a></li>
                    <li><a class="text-dark px-4 text-decoration-none" ; href="@Url.Action("OrderDetails", "Order")">訂單</a></li>
                    <li id="Cart">@Html.Partial("_CartPartial")</li>
                }
                else
                {
                    <li><a class="text-dark px-4 text-decoration-none" ; href="@Url.Action("sign", "Home")">登入</a></li>
                    <li><a class="text-dark px-4 text-decoration-none" ; href="@Url.Action("ShoppingCar", "ShoppingCart")"><i class="fas fa-shopping-cart"></i></a></li>
                }
            </ul>
        </div>

        <div class="row mb-4 mt-5" style="font-size:20px">
            <div class="col-sm-2"></div>
            @Html.Action("_categoryA", "Home")
            <div class="col-sm-2"></div>
        </div>

        <div class="container body-content">
            @RenderBody()
            <hr />



            <footer class="mb-3">
                <div class="d-flex justify-content-end text">
                    <span style="font-size: 12px; cursor: pointer; ">網站使用條款 | 隱私權政策 | 免責聲明 </span>
                    <span style="font-size: 12px"> | &copy; @DateTime.Now.Year - 衣貳衫</span>

                </div>
                <a href="#" class="back-to-top pt-1" style="font-size:2rem"><i class="fa fa-chevron-up"></i></a>
            </footer>
        </div>
    </div>

    @RenderSection("scripts", required: false)

    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>
    <script src="~/Scripts/ToTop.js"></script>
    <script src="~/Scripts/spucard.js"></script>
</body>
</html>
